    <!-- AI Prompt Interface -->
    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; border-radius: 12px; margin-bottom: 30px; box-shadow: 0 4px 12px rgba(102,126,234,0.3);">
      <h2 style="margin: 0 0 10px 0; color: white; font-size: 24px;">ğŸ¤– AI Quick Prompt</h2>
